

<div class="flex items-center justify-start px-5 py-3 sm:justify-center sm:px-0"> 
       <MoneyMate.Components.ui.Logo />
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler bg-black" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">

    <aside class="mt-0 sm:mt-10">
        @foreach (var route in routes)
           
        {
            <div class="flex items-center px-6 py-2 text-base">
                <NavLink class="flex h-full w-full items-center gap-4 rounded-md px-4 py-2 text-black hover:text-white hover:bg-green-700" href="@route.Href" Match="NavLinkMatch.All">
                    <Icon  Height="2em" Width="2em" Type="@route.Icon" Theme="outline" />                   
                    <span>@route.Name</span>
                </NavLink>

            </div>
        }
    </aside>
</div>

@code {
  
    private readonly List<Route> routes = new()
    {
        new Route { Name = "Dahsboard", Href = "", Icon = "appstore"},
        new Route { Name = "Income", Href = "income", Icon = "dollar"},
        new Route { Name = "Expenditure", Href = "expenses", Icon = "credit-card" },
        new Route { Name = "Debt", Href = "debt", Icon = "bank" },
        new Route { Name = "Setting", Href = "setting", Icon = "setting" }
    };

    private record Route
    {
        public string Name { get; init; }
        public string Href { get; init; }
        public string Icon { get; init; }
    }
}
